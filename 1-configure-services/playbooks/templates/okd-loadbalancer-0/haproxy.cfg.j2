# {{ ansible_managed }}

global
  log         127.0.0.1 local2
  pidfile     /var/run/haproxy.pid
  maxconn     4000
  daemon
defaults
  mode                    http
  log                     global
  option                  dontlognull
  option http-server-close
  option                  redispatch
  retries                 3
  timeout http-request    10s
  timeout queue           1m
  timeout connect         10s
  timeout client          1m
  timeout server          1m
  timeout http-keep-alive 10s
  timeout check           10s
  maxconn                 3000
listen api-server-6443 
  bind 10.10.56.252:6443
  mode tcp
  option  httpchk GET /readyz HTTP/1.0
  option  log-health-checks
  balance roundrobin
  server bootstrap bootstrap.okd.home.mawson.tech:6443 verify none check check-ssl inter 10s fall 2 rise 3 backup 
  server control-plane0 control-plane0.okd.home.mawson.tech:6443 weight 1 verify none check check-ssl inter 10s fall 2 rise 3
  server control-plane1 control-plane1.okd.home.mawson.tech:6443 weight 1 verify none check check-ssl inter 10s fall 2 rise 3
listen machine-config-server-22623 
  bind 10.10.56.252:22623
  mode tcp
  server bootstrap bootstrap.okd.home.mawson.tech:22623 check inter 1s backup 
  server control-plane0 control-plane0.okd.home.mawson.tech:22623 check inter 1s
  server control-plane1 control-plane1.okd.home.mawson.tech:22623 check inter 1s
listen ingress-router-443 
  bind 10.10.56.252:443
  mode tcp
  balance source
  server compute0 compute0.okd.home.mawson.tech:443 check inter 1s
  server compute1 compute1.okd.home.mawson.tech:443 check inter 1s
  server compute2 compute2.okd.home.mawson.tech:443 check inter 1s
listen ingress-router-80 
  bind 10.10.56.252:80
  mode tcp
  balance source
  server compute0 compute0.okd.home.mawson.tech:80 check inter 1s
  server compute1 compute1.okd.home.mawson.tech:80 check inter 1s
  server compute2 compute2.okd.home.mawson.tech:80 check inter 1s

